<% layout('layouts/boilerplate')%>

<body class="container bg-dark my-5">
	<header class="d-flex justify-content-between mb-4">
		<h1 class="text-light my-auto">Scores</h1>
		<nav class="btn-group btn-group-sm my-auto" role="group" aria-label="nav group">
			<a class="btn btn-primary" href="/">Home</a>
		</nav>
	</header>

	<main>
		<ul class="list-group">
			<% scores.forEach((score)=> { %>

			<li class="list-group-item">
				<div class="d-flex justify-content-between align-items-start container">
					<div class="fw-bold text-start w-25 my-0"><%= score.student_name %></div>
					<p class="text-start my-0"><%= score.test_name %> - <%= score.score%>%</p>
				</div>
			</li>

			<% }) %>
		</ul>
	</main>
</body>

</html>
