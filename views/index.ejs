<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Test</title>

		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="/css/style.css" />
	</head>

	<body class="container bg-dark my-5">
		<header class="d-flex justify-content-between mb-4">
			<h1 class="text-light my-auto">Test</h1>
			<nav class="btn-group btn-group-sm my-auto" role="group" aria-label="nav group">
				<a class="btn btn-primary" href="scores">Scores</a>
				<a class="btn btn-secondary" href="test-new-form">New Test</a>
			</nav>
		</header>

		<% tests.forEach((test) => { %>
		<div class="card mb-5">
			<div class="card-body d-flex justify-content-between">
				<h5 class="card-title my-auto"><%= test.test_name %></h5>
				<form action="/test-delete" method="POST">
				<div class="btn-group btn-group-sm">
					<a class="card-link btn btn-primary" href="/test-take/<%= test.test_id %>">Take Test</a>
					<a class="card-link btn btn-warning" href="/edit_test/<%= test.test_id %>">Edit</a>
						<input type="hidden" name="test_id" value="<%= test.test_id %>">
					<button class="btn btn-danger btn-sm">Delete</button>
					</div>
				</form>
			</div>
		</div>
		<% }) %>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
	</body>
</html>
